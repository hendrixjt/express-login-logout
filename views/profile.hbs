<h1>Hello {{FirstName}} {{LastName}}</h1>
<h2>Email: {{Email}}</h2>
<h3>Username: {{Username}}</h3>

<form id="createPost" name="createPost" method="POST" action="/users/profile/{{UserId}}">
    <div>
        <label for="name">Post Title: </label>
        <input type="text" name="postTitle" required>
    </div>
    <div>
        <label for="name">Post Body: </label>
        <input type="text" name="postBody" required>
    </div>
    <div>
        <button type="submit">Submit Post</button>
    </div>
</form>


{{#each posts}}
<div id="postList">
    <h1>{{PostTitle}} </h1>
    <p>{{PostBody}}</p>
    <a href="/users/editPost/{{PostId}}">Edit Post</a>
</div>
{{/each}}

<a href="/users/logout">Logout!</a>
